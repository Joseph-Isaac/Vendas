<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.planejamento.josephisaac.weudesmonteirovendas.NovasAtividades.VendasNovoDetalheDaVenda">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FINALIZAR"
        android:background="#7E57C2"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:id="@+id/idvndvbtn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="PREÇO DA VENDA:"
        android:textColor="#000000"
        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:id="@+id/idvndvpreco"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DATA DO PAGAMENTO:"
        android:textColor="#000000"
        android:id="@+id/textView11"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/idvndvpreco"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:maxLength="10"
        android:id="@+id/idvndvdata"
        android:layout_below="@+id/textView11"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/idvndvpreco"
        android:layout_alignEnd="@+id/idvndvpreco" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:text="PREÇO PAGO A VISTA:"
        android:textSize="25dp"
        android:id="@+id/textView12"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/idvndvdata"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/idvndvpago"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/textView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/idvndvdata"
        android:layout_alignEnd="@+id/idvndvdata" />

</RelativeLayout>
