<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.planejamento.josephisaac.weudesmonteirovendas.NovasAtividades.VendasNovoProduto">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idVendasNovoProdutoLV"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/idVendasNovoProdutoNovoBtn"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/idVendasNovoProdutoContinuar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOVO PRODUTO"
        android:textColor="#FFFFFF"
        android:background="#7E57C2"
        android:textSize="12dp"
        android:id="@+id/idVendasNovoProdutoNovoBtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idVendasNovoProdutoPesquisarBtn"
        android:layout_above="@+id/idVendasNovoProdutoLV"
        android:layout_toLeftOf="@+id/idVendasNovoProdutoNovoBtn"
        android:layout_toStartOf="@+id/idVendasNovoProdutoNovoBtn"
        android:text="PESQUISAR"
        android:textColor="#FFFFFF"
        android:background="#7E57C2"
        android:textSize="12dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idVendasNovoProdutoPesquisarEdt"
        android:layout_above="@+id/idVendasNovoProdutoLV"
        android:layout_toLeftOf="@+id/idVendasNovoProdutoPesquisarBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Nome do Produto"
        android:textSize="15dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="CONTINUAR"
        android:textColor="#FFFFFF"
        android:background="#7E57C2"
        android:id="@+id/idVendasNovoProdutoContinuar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
